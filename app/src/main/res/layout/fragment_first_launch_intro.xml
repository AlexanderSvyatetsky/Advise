<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/activity_first_launch_image_height_and_weight"
        android:layout_height="@dimen/activity_first_launch_image_height_and_weight"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/dreambimlogo_black" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo"
        android:layout_centerInParent="true"
        android:text="@string/intro_fragment_title"
        android:textSize="@dimen/string_size_large_title" />

    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/activity_first_launch_padding"
        android:text="@string/intro_fragment_body"
        android:textSize="@dimen/string_size_body" />


</RelativeLayout>