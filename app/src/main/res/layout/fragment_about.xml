<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:paddingTop="@dimen/fragment_about_padding_top_bottom"
    android:paddingBottom="@dimen/fragment_about_padding_top_bottom"
    android:paddingLeft="@dimen/fragment_about_padding_left_right"
    android:paddingRight="@dimen/fragment_about_padding_left_right">

            <TextView
                android:id="@+id/about_app_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/logo_imageview"
                android:text="@string/fragment_about_app_text"
                android:textSize="@dimen/string_size_body"
                android:textColor="@color/colorTextAccentText"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@id/logo_imageview"
                android:layout_width="@dimen/fragment_about_logo_size"
                android:layout_height="@dimen/fragment_about_logo_size"
                android:src="@drawable/dreambimlogo_black"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_light"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/about_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo_imageview"
                android:layout_centerHorizontal="true"
                android:text="@string/fragment_about_text"
                android:textColor="@color/colorTextExtraInfo"
                android:textSize="@dimen/string_size_accompany_info"/>

</RelativeLayout>