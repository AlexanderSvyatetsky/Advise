<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_comment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/fragment_comment_margin_top_and_bottom"
    android:layout_marginLeft="@dimen/fragment_comment_margin_left_and_right"
    android:layout_marginRight="@dimen/fragment_comment_margin_left_and_right"
    android:layout_marginTop="@dimen/fragment_comment_margin_top_and_bottom"
    android:background="@color/colorElementBackground"
    android:paddingBottom="@dimen/fragment_comment_margin_to_frame">

    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fragment_feed_margin_to_frame"
        android:layout_marginRight="@dimen/fragment_feed_margin_to_frame"
        android:layout_marginTop="@dimen/fragment_feed_margin_to_frame"
        tools:text="comment body"
        android:textSize="@dimen/string_size_body" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/body"
        android:layout_marginLeft="@dimen/fragment_comment_margin_to_frame"
        android:layout_marginRight="@dimen/fragment_comment_margin_to_frame"
        android:layout_marginTop="@dimen/fragment_comment_margin_to_frame"
        android:layout_marginBottom="@dimen/fragment_comment_margin_to_frame"
        android:textSize="@dimen/string_size_body" />

    <ImageView
        android:id="@+id/delete_imageview"
        android:layout_width="@dimen/fragment_comment_button_size"
        android:layout_height="@dimen/fragment_comment_button_size"
        android:padding="@dimen/fragment_comment_padding_button"
        android:src="@drawable/ic_delete_black_48dp"
        android:background="@drawable/element_background"
        android:layout_below="@id/body"
        android:layout_marginLeft="@dimen/fragment_comment_margin_to_frame"
        android:layout_marginRight="@dimen/fragment_comment_margin_to_frame"
        android:layout_marginTop="@dimen/fragment_comment_margin_to_frame"/>

</RelativeLayout>